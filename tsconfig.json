{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noEmit": false,
    "baseUrl": "src",
    "paths": {
      "@appAsset/*": ["app/asset/*"],
      "@appComponent/*": ["app/component/*"],
      "@appLayout/*": ["app/layout/*"],
      "@appRoute/*": ["app/route/*"],
      "@appStore/*": ["app/store/*"],
      "@appAction/*": ["app/store/action/*"],
      "@appReducer/*": ["app/store/reducer/*"],
      "@appSaga/*": ["app/store/saga/*"],
      "@appUtil/*": ["app/util/*"],
      "@serverRoute/*": ["server/route/*"],
      "@serverTemplate/*": ["server/template/*"],
      "@serverUtil/*": ["server/util/*"]
    },
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/app/**/*",
    "src/server/**/*"
  ],
  "files": [
    "src/app/index.d.ts"
  ]
}