{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "strict": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*",
        "../*"
      ]
    },
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "files": [
    "./src/index.d.ts"
  ]
}