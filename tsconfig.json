{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noEmit": false,
    "baseUrl": "src",
    "paths": {
      "@asset/*": ["asset/*"],
      "@component/*": ["component/*"],
      "@layout/*": ["layout/*"],
      "@route/*": ["route/*"],
      "@store/*": ["store/*"],
      "@action/*": ["store/action/*"],
      "@reducer/*": ["store/reducer/*"],
      "@saga/*": ["store/saga/*"],
      "@util/*": ["util/*"]
    },
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": ["src/**/*"],
  "files": [
    "./src/index.d.ts"
  ]
}